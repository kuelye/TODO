<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.schedule.MonthFragment">


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedMonthDateColor="@color/ultramarin"
            android:selectedWeekBackgroundColor="@color/ultramarin"
            android:weekNumberColor="@color/electricpurpur"
            android:weekSeparatorLineColor="@color/strongpink" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_mounth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_list_schedule" />


</LinearLayout>
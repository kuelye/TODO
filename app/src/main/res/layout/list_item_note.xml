<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="16dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="Note" />

        <TextView
            android:id="@+id/text_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:text="Note"
            android:layout_below="@id/name_note_text"/>


        <ImageView
            android:id="@+id/star_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_star"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/text_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/strongpink"
            android:textSize="10sp"
            tools:text="14.00"
            android:layout_below="@id/star_image"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/text_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="8dp"
            android:textColor="@color/strongpink"
            android:textSize="10sp"
            tools:text="14.03.2020"
            android:layout_below="@id/text_not"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>